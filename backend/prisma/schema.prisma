generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  firstname String
  lastname  String
  email     String @unique
  password  String
  role      String @default("user") // "user" or "admin"
}

model Event {
  id                  Int      @id @default(autoincrement())
  title               String
  location            String
  date                DateTime
  startTime           DateTime
  endTime             DateTime
  audience            String
  attention           String
  description         String
  vipPrice            Float
  vvipPrice           Float
  ngedatePrice        Float
  ngedatePremiumPrice Float
  ramePrice           Float
  ramePremiumPrice    Float
  imageUrl            String
}
